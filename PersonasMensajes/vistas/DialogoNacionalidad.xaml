<Window x:Class="PersonasMensajes.DialogoNacionalidad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonasMensajes"
        mc:Ignorable="d"
        Title="Añadir nacionalidad" Height="129" Width="301" ShowInTaskbar="False" ResizeMode="NoResize" Icon="../assets/add.ico">
    <StackPanel Margin="10">
        <TextBlock>Nacionalidad</TextBlock>
        <TextBox Text="{Binding Path=Nacionalidad, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="AceptarButton" Width="80" Margin="0,0,5,0" IsDefault="True" Click="AceptarButton_Click">Aceptar</Button>
            <Button Width="80" IsCancel="True">Cancelar</Button>
        </StackPanel>
    </StackPanel>
</Window>
