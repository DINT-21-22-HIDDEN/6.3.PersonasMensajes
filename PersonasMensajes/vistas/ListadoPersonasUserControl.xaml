<UserControl x:Class="PersonasMensajes.ListadoPersonasUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonasMensajes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ListBox Margin="10" ItemsSource="{Binding Path=ListaPersonas}" SelectedItem="{Binding Path=PersonaSeleccionada}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <TextBlock>
                    <Run Text="{Binding Path=Nombre}"></Run>
                    <Run Text="-"></Run>
                    <Run Text="{Binding Path=Edad}"></Run>
                    <Run Text="-"></Run>
                    <Run Text="{Binding Path=Nacionalidad}"></Run>
                </TextBlock>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
